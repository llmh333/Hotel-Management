<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 20; -fx-border-radius: 20;" stylesheets="@../../css/statistical.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel_management.controller.card.StatisticalCardController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <VBox>
                            <children>
                                <Label styleClass="header-title" text="Revenue Analytics" />
                                <Label styleClass="header-subtitle" text="Overview of hotel performance" />
                            </children>
                        </VBox>

                        <Region HBox.hgrow="ALWAYS" />

                        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="filter-bar">
                            <children>
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;" text="View by:" />
                                <ComboBox fx:id="comboPeriod" prefWidth="130.0" styleClass="combo-box-flat" />

                                <DatePicker fx:id="datePickerStart" prefWidth="130.0" promptText="Start Date" />
                                <Label style="-fx-text-fill: #7f8c8d;" text="to" />
                                <DatePicker fx:id="datePickerEnd" prefWidth="130.0" promptText="End Date" />

                                <Button fx:id="btnFilter" styleClass="btn-filter">
                                    <graphic>
                                        <FontIcon iconColor="white" iconLiteral="fas-filter" iconSize="14" />
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>

                        <Button fx:id="btnExport" styleClass="btn-export" text="Export Report">
                            <graphic>
                                <FontIcon iconColor="#1f771c" iconLiteral="fas-file-export" />
                            </graphic>
                        </Button>
                    </children>
                </HBox>

                <HBox spacing="20.0">
                    <children>
                        <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconLiteral="fas-dollar-sign" iconSize="22" styleClass="icon-kpi-green" />
                                    <Label styleClass="label-kpi-title" text="Total Revenue" />
                                </HBox>
                                <Label fx:id="lblTotalRevenue" styleClass="label-kpi-value" text="0" />
                                <Label styleClass="label-kpi-trend-up" text="+15% from last month" />
                            </children>
                        </VBox>

                        <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconLiteral="fas-calendar-check" iconSize="22" styleClass="icon-kpi-blue" />
                                    <Label styleClass="label-kpi-title" text="Total Invoices" />
                                </HBox>
                                <Label fx:id="lblTotalBookings" styleClass="label-kpi-value" text="0" />
                                <Label styleClass="label-kpi-trend-down" text="In selected period" />
                            </children>
                        </VBox>

                        <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconLiteral="fas-concierge-bell" iconSize="22" styleClass="icon-kpi-orange" />
                                    <Label styleClass="label-kpi-title" text="Service Income" />
                                </HBox>
                                <Label fx:id="lblServiceRevenue" styleClass="label-kpi-value" text="0" />
                                <Label styleClass="label-kpi-trend-neutral" text="Based on invoices" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox prefWidth="800.0" styleClass="chart-card" HBox.hgrow="ALWAYS">
                            <children>
                                <Label fx:id="lblChartTitle" styleClass="chart-title" text="Revenue Overview" />
                                <BarChart fx:id="barChartRevenue" animated="false" legendVisible="false" VBox.vgrow="ALWAYS">
                                    <xAxis>
                                        <CategoryAxis label="Time" side="BOTTOM" fx:id="xAxis" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis label="Revenue ($)" side="LEFT" />
                                    </yAxis>
                                </BarChart>
                            </children>
                        </VBox>

                        <VBox prefWidth="350.0" styleClass="chart-card" HBox.hgrow="SOMETIMES">
                            <children>
                                <Label styleClass="chart-title" text="Revenue Source" />
                                <PieChart fx:id="pieChartSource" animated="false" labelsVisible="false" legendSide="BOTTOM" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
