<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="482.0" prefWidth="904.0" style="-fx-background-color: transparent;" stylesheets="@../../css/servicesCard.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel_management.fxml.card.ServicesCard">

    <children>
        <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 5);" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>

                <VBox spacing="5.0">
                    <children>
                        <Label style="-fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Services Management" />
                        <Label style="-fx-text-fill: #95a5a6; -fx-font-size: 14;" text="Setup your hotel services, menu items, and pricing." />
                    </children>
                </VBox>

                <Separator style="-fx-opacity: 0.5;" />

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" text="Filter by:" />

                                <ToggleButton fx:id="btnAllServices" selected="true" styleClass="filter-chip" text="All">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="categoryGroup" />
                                    </toggleGroup>
                                </ToggleButton>

                                <ToggleButton fx:id="btnFood" styleClass="filter-chip" text="Foods" toggleGroup="$categoryGroup" />
                                <ToggleButton fx:id="btnDrinks" styleClass="filter-chip" text="Drinks" toggleGroup="$categoryGroup" />
                                <ToggleButton fx:id="btnOthers" styleClass="filter-chip" text="Others" toggleGroup="$categoryGroup" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="search-box">
                                <children>
                                    <FontIcon iconColor="#bdc3c7" iconLiteral="fas-search" />
                                    <TextField fx:id="filedSearchService" promptText="Search name..." styleClass="transparent-field" />
                                </children>
                            </HBox>

                            <Button fx:id="btnNewService" minWidth="120.0" styleClass="btn-primary" text="New Service">
                                <graphic>
                                    <FontIcon iconColor="white" iconLiteral="fas-plus" />
                                </graphic>
                            </Button>
                        </HBox>
                    </children>
                </HBox>

                <TableView fx:id="tbleServices" styleClass="modern-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="50.0" style="-fx-alignment: CENTER;" text="ID" />
                        <TableColumn prefWidth="250.0" text="Service Name" />
                        <TableColumn prefWidth="120.0" style="-fx-alignment: CENTER;" text="Category" />
                        <TableColumn prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Price ($)" />
                        <TableColumn prefWidth="80.0" style="-fx-alignment: CENTER;" text="Stock" />
                        <TableColumn prefWidth="100.0" style="-fx-alignment: CENTER;" text="Status" />
                        <TableColumn prefWidth="120.0" style="-fx-alignment: CENTER;" text="Actions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

            </children>
        </VBox>
    </children>
</AnchorPane>
